@page
@model GerenRest.RazorPages.Pages.Categoria.Create
<head>
  <style>
		body {
			background-color: #7779b872; /* Substitua pelo código hexadecimal da cor que você deseja usar */
		}
  </style>
</head>
<body>
    <h1>Criar nova Categoria</h1>
@if (!string.IsNullOrEmpty(TempData["ErroCategoria"]?.ToString())) {
    <div class="alert alert-warning">@TempData["ErroCategoria"]</div>
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-dange"></div>
            <div class="form-group">
                <label asp-for="categoriaModel.Nome">Nome da Categoria</label>
                <input asp-for="categoriaModel.Nome" class="form-control">
                <span asp-validation-for="categoriaModel.Nome" class="text-dange"></span>
            </div>
            <div class="form-group">
                <label asp-for="categoriaModel.Descricao">Descrição</label>
                <input asp-for="categoriaModel.Descricao" class="form-control">
                <span asp-validation-for="categoriaModel.Descricao" class="text-dange"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Salvar"/>
                <a asp-page="/Categoria/Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
</body>